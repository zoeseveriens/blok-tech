<%- include('partials/account-header'); -%>
<body>
   <% for (var index = 0; index < data.length; index++) { %>
  <h1 class="page-title">Welcome back to your profile, <%= data[index].name %></h1>
  


  <section class="edit-account-page">
     <div class="account-img-container"></div>

     <form method="POST" action="/account">
      <label>Name</label>
      <input type="text" name="name" value="<%= data[index].name %>">
      <label>Age</label>
      <input type="number" name="age" value="<%= data[index].age %>">
      <label>Profession</label>
      <input type="text" name="profession" value="<%= data[index].profession %>">
      <h1>Tell something about yourself</h1>
      <label>About me:</label>
      <textarea name="about" id="about" cols="30" rows="10"><%= data[index].about %></textarea>
      <h1>What are some of your interests?</h1>
      <label>1</label>
      <input type="text" name="interest" value="<%= data[index].interest %>"> 
      <input class="add-button" type="submit" value="save">
      <input type="submit" value="delete">
  </form>
  <% } %>


        <!-- <button><a href="/account">delete account</a></button> -->

      </section>

      <script src="script.js"></script>
    
</body>
</html>