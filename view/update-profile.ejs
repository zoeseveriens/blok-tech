<!DOCTYPE html>
<html lang="en">

<%- include('partials/register-header'); -%>

<body>
   


  <section class="create-account-page">
    <h1 class="page-title">Welcome to your profile, <%= user.name %></h1>

     <div class="account-img-container"></div>

     <form method="POST" action="/update-profile">

      <fieldset>
        <label>Name</label>
        <input type="text" name="name" value="<%= user.name %>">
        <label>Age</label>
        <input type="number" name="age" value="<%= user.age %>">
        <label>Profession</label>
        <input type="text" name="profession" value="<%= user.profession %>">
      </fieldset>

      <fieldset>
        <h2>Tell something about yourself</h2>
        <label>Bio</label>
        <textarea name="about" id="about" cols="30" rows="3"><%= user.about %></textarea>
      </fieldset>

      <fieldset>
        <h2>What are some of your interests?</h2>
        <label>1</label>
        <input type="text" name="interest[]" value="<%= user.interest[0] %>"> 
        <label>2</label>
        <input type="text" name="interest[]" value="<%= user.interest[1] %>"> 
        <label>3</label>
        <input type="text" name="interest[]" value="<%= user.interest[2] %>">
      </fieldset>

      <input class="add-button" type="submit" value="save">

     </form>

  </section>

  <script src="script.js"></script>
    
</body>
</html>