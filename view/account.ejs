<%- include('partials/account-header'); -%>
<body>
   
  <h1 class="page-title">Welcome back to your profile, <%= user.name %></h1>
  


  <section class="edit-account-page">
     <div class="account-img-container"></div>

     <form method="POST" action="/account">
      <label>Name</label>
      <input type="text" name="name" value="<%= user.name %>">
      <label>Age</label>
      <input type="number" name="age" value="<%= user.age %>">
      <label>Profession</label>
      <input type="text" name="profession" value="<%= user.profession %>">
      <h1>Tell something about yourself</h1>
      <label>About me:</label>
      <textarea name="about" id="about" cols="30" rows="10"><%= user.about %></textarea>
      <h1>What are some of your interests?</h1>
      <label>1</label>
      <input type="text" name="interest" value="<%= user.interest[0] %>"> 
      <label>2</label>
      <input type="text" name="interest" value="<%= user.interest[1] %>"> 
      <label>3</label>
      <input type="text" name="interest" value="<%= user.interest[2] %>"> 
      <input class="add-button" type="submit" value="save">
  </form>



        <!-- <button><a href="/account">delete account</a></button> -->

      </section>

      <script src="script.js"></script>
    
</body>
</html>